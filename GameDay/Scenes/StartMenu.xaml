<Page
    x:Class="GameDay.Scenes.StartMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Margin="25" Background="#222222" Click="Scene_02_Click" HorizontalAlignment="Center">
                <TextBlock Foreground="White" Text="Play Space Portal" FontSize="40" Margin="10"/>
            </Button>
            <Button Margin="25" Background="#222222" Click="Scene_04_2_Click" HorizontalAlignment="Center">
                <TextBlock Foreground="White" Text="Play Virus Attack New" FontSize="40" Margin="10"/>
            </Button>
            <Button Margin="25" Background="#222222" Click="Scene_Flappy_Click" HorizontalAlignment="Center">
                <TextBlock Foreground="White" Text="Play Flappy" FontSize="40" Margin="10"/>
            </Button>
            <Button Margin="25" Background="#222222" Click="Scene_TestDirection_Click" HorizontalAlignment="Center">
                <TextBlock Foreground="White" Text="Directions Tester" FontSize="40" Margin="10"/>
            </Button>
            
        </StackPanel>

    </Grid>
</Page>
